@model VideotekaFm.Models.Rezervacija

@{
    ViewData["Title"] = "Create";
}

<h1>Rezervacija</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClanId" class="control-label"></label>
                <select asp-for="ClanId" class ="form-control" asp-items="ViewBag.ClanId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FilmId" class="control-label"></label>
                <select asp-for="FilmId" class ="form-control" asp-items="ViewBag.FilmId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PocetakPosudbe" class="control-label"></label>
                <input asp-for="PocetakPosudbe" class="form-control" />
                <span asp-validation-for="PocetakPosudbe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-dark" />
                <a type="submit" asp-action="Index" class="btn btn-dark">Nazad na listu rezervacija</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
