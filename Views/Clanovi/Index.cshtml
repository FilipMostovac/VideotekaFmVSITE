@model IEnumerable<VideotekaFm.Models.Clan>

@{
    ViewData["Title"] = "Index";
}

<h1>Članovi videoteke</h1>

<p>
    <a class="btn btn-dark" asp-area="" asp-controller="Clanovi" asp-action="Create">Novi član</a>
</p>
<table class="table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                <a class="btn btn-dark" asp-area="" asp-controller="Clanovi" asp-action="Edit" asp-route-id="@item.Id">Uredi</a>
                <a class="btn btn-dark" asp-area="" asp-controller="Clanovi" asp-action="Details" asp-route-id="@item.Id">Detalji</a>
                <a class="btn btn-dark" asp-area="" asp-controller="Clanovi" asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
